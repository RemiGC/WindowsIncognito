<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:wpfIncognito" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">

    <ImageBrush x:Key="unLock" ImageSource="pack://application:,,,/Resources/ImageUnlocked.png" TextBlock.Foreground="LightBlue" />
    <ImageBrush x:Key="lock" ImageSource="pack://application:,,,/Resources/ImageLocked.png" TextBlock.Foreground="Red"  />
    
    <Style x:Key="DataGridCellStyleStatus" TargetType="{x:Type DataGridCell}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Locked">
                <Setter Property="Background" Value="{StaticResource lock}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status}" Value="Unlocked">
                <Setter Property="Background" Value="{StaticResource unLock}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="DataGridRowStyle" TargetType="{x:Type DataGridRow}">
        <Setter Property="Height" Value="25"/>
    </Style>
</ResourceDictionary>